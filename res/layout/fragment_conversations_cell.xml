<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView 
        android:src="@drawable/display_pic_placeholder"
        android:id="@+id/peep_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/dp_place_holder"/>
    
    <RelativeLayout
        android:id="@+id/conv_info"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/peep_pic"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout 
            android:id="@+id/name_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
	       	    android:id="@+id/peep_name"
	       	    android:layout_marginTop="5dp"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:textColor="@android:color/white"
	       	    android:textSize="18sp"/>
            
			<TextView
	       	    android:id="@+id/message_time"
	       	    android:textSize="15sp"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
	       	    android:layout_alignParentRight="true"
	       	    android:layout_marginRight="12dp"
	       	    android:textColor="@android:color/white"/>          
        </RelativeLayout>
        
       	<TextView 
       	    android:id="@+id/peep_message"
       	    android:textSize="15sp"
       	    android:ellipsize="end"
       	    android:layout_below="@id/name_time_container"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:singleLine="true"
       	    android:layout_marginBottom="5dp"
       	    android:textColor="@android:color/white"
       	    android:layout_marginRight="12dp"/>
       	

    </RelativeLayout>
</RelativeLayout>